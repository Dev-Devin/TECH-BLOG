<section>

  <div>
    <h2>My Posts</h2>
    {{#if posts}}
      {{#each posts}}
        <div>
          <h3>{{title}}</h3>
          <p>{{contents}}</p>
          <p>Created on {{date_created}}</p>
          <a href="/post/{{id}}">View Post</a>
        </div>
      {{/each}}
    {{else}}
      <p>You haven't created any posts yet!</p>
    {{/if}}
  </div>
  <div class="form">
    <h2>Create a Post</h2>
    <form id="new-post-form">
      <label for="title">Title:</label>
      <input type="text" name="post-title" id="title" />
      <label for="contents">Contents:</label>
      <textarea name="post-contents" id="contents" cols="30" rows="10"></textarea>
      <button type="submit">Submit</button>
    </form>
  </div>
</section>
<script src="/js/newpost.js"></script>